# Queue implementation using array in python

class queue:
    def __init__(self):
        self.queue=[]

    def insert(self, value):
        self.queue.append(value)
        print(f"{value} insert in to the queue")

    def delete(self):
        if len(self.queue)==0:
            print("queue is empty,cannot delete")
        else:
            deleted_value=self.queue.pop(0)
            print(f"{deleted_value} deleted from the queue")

    def display(self):
        if len(self.queue)==0:
            print("queue is empty")
        else:
            print("queue:",self.queue)


q=queue()
while True:
    print("\n choose an operation")
    print("1. Insert")
    print("2. Delete")
    print("3. Display")
    print("4. Exit")

    choice = int(input("enter the your choice:"))

    if choice == 1:
        value = int(input("Enter a value to insert:"))
        q.insert(value)

    elif choice == 2:
        q.delete()
    elif choice == 3:
        q.display()
    elif choice == 4:
        print("Exiting")
        break
    else:
        print("Invalid choice , please try again.1")



